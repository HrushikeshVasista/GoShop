<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp"
    android:layout_marginBottom="1px">


    <ImageView
        android:src="@drawable/broccoli"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/itm_img"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp" />

    <TextView
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="6pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broccoli"
        android:id="@+id/itm_name"
        android:layout_below="@+id/itm_img"
        android:layout_alignStart="@+id/itm_img"
        android:layout_marginLeft="2dp"
        android:textColor="#ff0000" />

    <TextView
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="7pt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$2.45"
        android:background="@drawable/green"
        android:textStyle="bold"
        android:id="@+id/itm_price"
        android:layout_below="@+id/itm_name"
        android:layout_alignStart="@+id/itm_img"
        android:layout_marginLeft="2dp"
        android:textColor="@color/white" />
</LinearLayout>