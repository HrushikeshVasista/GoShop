<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/cartFragmentLayout1"
    android:visibility="visible">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartFragmentAmt"
        android:textSize="15sp"
        android:text="$"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginLeft="5dp"
        android:visibility="visible"
        android:layout_alignTop="@+id/cartFragmentTotal"
        android:layout_toStartOf="@+id/cartFragmentTotal"
        android:background="@color/colorPrimary"
        android:overScrollMode="always"
        android:elevation="50dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartFragmentListNew"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/buttonCartFragChkout"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="5dp">
    </ListView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonCartFragChkout"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/cartFragmentListNew"
        android:text="@string/cartFragmentCheckout"
        android:elevation="5dp"
        android:layout_margin="5dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cartFragmentTotal"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="0"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:elegantTextHeight="false"
        android:elevation="50dp"
        android:layout_alignBaseline="@+id/buttonCartFragChkout"
        android:layout_alignBottom="@+id/buttonCartFragChkout"
        android:layout_alignEnd="@+id/buttonCartFragChkout"
        android:layout_marginEnd="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="12dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/cartFragmentMsg5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#17194b"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="#4e4f7c" />
</RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/cartFragmentLayout2"
        android:visibility="gone">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cartFragmentDefMsg1"
            android:text="@string/cartFragmentMsg2"
            android:layout_marginTop="75dp"
            android:textSize="40sp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="#b9b4b4"
            android:visibility="visible"
            android:layout_gravity="center_horizontal|top" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cartFragmentDefMsg2"
            android:textColor="#b9b4b4"
            android:text="@string/cartFragmentMsg3"
            android:layout_marginTop="54dp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:gravity="center"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_below="@+id/cartFragmentDefMsg1"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</RelativeLayout>


